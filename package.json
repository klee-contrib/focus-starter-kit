{
    "author": "focus@kleegroup.com",
    "name": "focus-demo-app",
    "description": "Focus demonstration application",
    "version": "2.0.0",
    "homepage": "https://github.com/KleeGroup/focus-demo-app",
    "repository": {
        "type": "git",
        "url": "https://github.com/KleeGroup/focus-demo-app.git"
    },
    "engines": {
        "node": "0.4.x",
        "npm": "2.14.x"
    },
    "scripts": {
        "bundle": "better-npm-run bundle",
        "build": "npm run bundle",
        "start": "npm run start:npm",
        "start:local": "better-npm-run webpack-dev-server-local-focus",
        "start:npm": "better-npm-run webpack-dev-server-npm-focus",
        "mocked-api": "node api/index.js",
        "profile": "better-npm-run profile"
    },
    "main": "app/index.js",
    "babel": {
        "presets": [
            "stage-0",
            "react",
            "es2015"
        ],
        "plugins": [
            "transform-class-properties",
            "transform-decorators-legacy",
            "add-module-exports"
        ]
    },
    "betterScripts": {
        "bundle": {
            "command": "webpack --progress --json --profile",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "ENTRY_FILE_PATH": "./app/index",
                "BABELIFIED_PATH": "./app",
                "DEV": false,
                "NODE_ENV": "production",
                "LIBRARY_NAME": "FocusDemoApp",
                "OUTPUT_DIR": "./public",
                "PACKAGE_JSON_PATH": "./"
            }
        },
        "profile": {
            "command": "webpack --progress --json --profile > profile.json",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "ENTRY_FILE_PATH": "./app/index",
                "BABELIFIED_PATH": "./app",
                "DEV": false,
                "NODE_ENV": "production",
                "LIBRARY_NAME": "FocusDemoApp",
                "OUTPUT_DIR": "./public",
                "PACKAGE_JSON_PATH": "./"
            }
        },
        "webpack-dev-server-local-focus": {
            "command": "node ./dev-server.js",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "BABELIFIED_PATH": "./app",
                "ENTRY_FILE_PATH": "./app/index",
                "PAGE_TITLE": "Focus demonstration application",
                "API_PORT": 8080,
                "OUTPUT_DIR": "./public",
                "LOCAL_FOCUS": true,
                "PACKAGE_JSON_PATH": "./"
            }
        },
        "webpack-dev-server-npm-focus": {
            "command": "node ./dev-server.js",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "BABELIFIED_PATH": "./app",
                "ENTRY_FILE_PATH": "./app/index",
                "PAGE_TITLE": "Focus demonstration application",
                "API_PORT": 8080,
                "OUTPUT_DIR": "./public",
                "LOCAL_FOCUS": false,
                "PACKAGE_JSON_PATH": "./"
            }
        }
    },
    "license": "MIT",
    "dependencies": {
        "focus-components": "0.8.6-beta11",
        "focus-core": "0.12.4-beta7",
        "immutable": "^3.7.2",
        "jquery": "3.0.0-alpha1",
        "lodash": "^3.10.1",
        "moment": "^2.10.3",
        "native-promise-only": "^0.8.0-a",
        "numeral": "^1.5.3",
        "react": "^0.14.6",
        "react-dom": "^0.14.6"
    },
    "devDependencies": {
        "animate.css": "^3.4.0",
        "babel": "^6.3.26",
        "babel-cli": "^6.4.5",
        "babel-core": "^6.4.5",
        "babel-eslint": "^5.0.0-beta6",
        "babel-loader": "^6.2.1",
        "babel-plugin-add-module-exports": "^0.1.2",
        "babel-plugin-transform-class-properties": "^6.4.0",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-polyfill": "^6.3.14",
        "babel-preset-es2015": "^6.3.13",
        "babel-preset-react": "^6.3.13",
        "babel-preset-stage-0": "^6.3.13",
        "babel-runtime": "^6.3.19",
        "better-npm-run": "0.0.5",
        "body-parser": "^1.14.1",
        "css-loader": "^0.21.0",
        "eslint": "1.5.1",
        "eslint-config-focus": "0.3.0",
        "eslint-plugin-filenames": "0.1.1",
        "eslint-plugin-react": "3.5.0",
        "exports-loader": "^0.6.2",
        "express": "^4.13.3",
        "extract-text-webpack-plugin": "^1.0.1",
        "font-awesome": "^4.5.0",
        "json-loader": "^0.5.3",
        "material-design-icons-iconfont": "^2.0.4",
        "migration-tool": "^0.1.0",
        "react-addons-css-transition-group": "^0.14.6",
        "react-hot-loader": "^1.3.0",
        "sass-loader": "^3.0.0",
        "source-map-loader": "^0.1.5",
        "style-loader": "^0.12.4",
        "url-loader": "^0.5.6",
        "webpack": "^1.12.12",
        "webpack-dev-server": "1.14.1",
        "webpack-focus": "^0.9.1"
    }
}
